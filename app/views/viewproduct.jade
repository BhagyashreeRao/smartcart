doctype html
html(lang='en')
  head
    title Smart-Cart
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css')
    script(src='https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js')
    script(src='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js')
    style.
      body{
      background-color: #b3e0ff;
      }
      .jumbotron {
      margin-bottom: 0;
      background-color: #002e4d ;
      color:white;
      }
      .productClass
      {
      margin-left : 50px;
      }
      footer {
      background-color: #f2f2f2;
      padding: 25px;
      }
      p {
      margin-top : 30px
      margin-bottom : 50px;
      }
      button {
      margin-bottom : 40px;
      }
  body
    .jumbotron
      .container.text-center
        h1 Smart-cart
        p Start smart shopping here!
    .container(style='margin-top: 50px; padding : 20px 20px 20px 20px;') 
      br
      div(style='margin-left : 60px;')
          
          span Product Name : 
          span=product.productName
          br
          span Product categories : 
          span=product.productCategories
          br
          span Manufacturer : 
          span=product.manufacturer
          br
          span Product Details : 
          span=product.productDetails
          br
          span Product cost : 
          span=product.productCost
          br
          span CoD Available : 
          span=product.codAvailable
          br
          span availability : 
          span=product.availability  
          span  in stock
          br
          br
    ul.pager
          li.next
            a(href='/product/viewAllProducts') ← Back      

    footer.container-fluid.text-center
      p  © Smart-cart 2017 
